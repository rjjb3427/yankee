<section id="users_main" class="sub_main">
	<% if notice %>
		<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
	<% end %>	
	<div id="index_main">
	<% unless @users.empty? %>		
	<% @users.each do |user| %>
	<div class="user_info">
		<% if user.photo? %>
			<%=link_to image_tag(user.photo.small_thumb,:alt=>user.name),user.photo.large_thumb.url,:class=>'simple_image',:title=>user.name %>		
		<% else %>
			<%=image_tag 'anon.png',:alt=>user.name %>
		<% end %>
	<dl>
		<dt><%=user.name %> </dt>
		<dd><%=user.description %></dd>
	</dl>
	</div>
	<% end %>
	<% else %>		
	<div><%=t(:no_data)%></div>
	<% end %>	
	</div>
	<div id="sl_bottom_menu">
		<%= link_to "서명하기",new_user_registration_path %>
		<div class="flickr_pagination"><%= paginate @users %></div>
	</div>		
</section>
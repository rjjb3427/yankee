<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="sl_notice_show">
	<div class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @contact.title %></h3>
			<p><%=t(:label_name) %> :<%=userName(@contact,10) %> &nbsp;&nbsp;&nbsp; <%=t(:label_created_at) %> : <%= @contact.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text"><%= simple_format(@contact.contact_content.content) %></div>
		</div>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_list),contacts_path %>
		<% if user_signed_in? %>
		<% if current_user.admin? %>
		&nbsp; | &nbsp; <%= link_to t(:link_edit), edit_contact_path(@contact) %> &nbsp; | &nbsp; <%= link_to t(:link_delete), @contact, method: :delete, data: { confirm: t(:delete_confirm) } %>
		<% end %>
		<% end %>
	</div>
</section>

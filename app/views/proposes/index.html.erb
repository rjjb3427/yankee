<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="propose_main">
	<div id="index_main">
		<% unless @proposes.empty? %>		
		<% @proposes.each do |propose| %>
		<div class="content_list">
			<div class="content_list_head"><span class="content_list_name"><%=propose.user.name %></span> &nbsp;&nbsp; <span class="content_list_title"><%=propose.title %></span> <span class="content_list_date"><%=propose.created_at %></span></div>
			<div class="content_list_content"><%=simple_format(propose.content) %></div>
		</div>
		<% end %>
		<% else %>		
		<div><%=t(:no_data) %></div>
		<% end %>	
	</div>
	<div id="sl_bottom_menu">
		<%= link_to t(:link_new),new_propose_path %>
		<%= paginate @proposes %>
	</div>
	<%= render :partial => 'layouts/ad' %>	
</section>
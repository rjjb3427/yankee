<!DOCTYPE html>
<html lang="ko">
<head>
<title><%=@title %></title>
<meta charset="utf-8">
<meta name="robots" content="<%=@meta_robot %>" />
<meta name="application-name" content="<%=@meta_application_name %>" />
<meta name="keywords" content="<%=@meta_keyword %>" />
<meta name="description" content="<%=@meta_description %>" />
<meta name="author" content="Sleeping-Lion" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<link rel="shortcut icon" href="<%=asset_path('favicon.ico') %>" />
<%= stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css", :media => "all" %>
<%= stylesheet_link_tag @style, :media => "all" %>
<%= csrf_meta_tags %>
</head>
<body>
<!--[if lt IE 9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
<%= render :partial => 'layouts/header' %>
<section id="mom">
	<section id="main" class="container">
		<section class="sub_main">
			<% unless current_page?(root_path) %>
			<div class="page-header pull-left row-fluid">
				<h1 class="pull-left"><%=@controller_name %></h1>
				<ul class="breadcrumb pull-right">
					<li><%=link_to t(:home),root_path %></li>
					<% if @page_category %>
					<li><%=link_to @page_category %></li>
					<% end %>
					<li class="active"><%=@controller_name %></li>
				</ul>
			</div>
			<% end %>
	<% unless	@menu_setting.nil? %>
	<% if @ad && @menu_setting.ad_position_id==2 %>
	<%= render :partial => 'layouts/ad' %>
	<% end %>
	<% end %>
				<%=yield %>
	<% unless	@menu_setting.nil? %>				
	<% if @ad && @menu_setting.ad_position_id==3 %>
	<%= render :partial => 'layouts/ad' %>
	<% end %>
	<% end %>
			<div class="clearfix">&nbsp;</div>
		</section>
	</section>
</section>
<%= render :partial => 'layouts/footer' %>
<div class="slboard_overlay" id="overlay"></div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
<%= javascript_include_tag "//cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js" %>
<%= javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js" %>
<%= javascript_include_tag @script %>
</body>
</html>
<header>
	<h1><%=link_to t(:home_title),root_path %></h1>	
	<% if user_signed_in? %>			
	<ul id="top_menu">	
		<li><%=link_to current_user.name,edit_user_registration_path %><%=t(:welcome)%></li>
		<li><%= link_to t(:logout),destroy_user_session_path %></li>
	</ul>
	<% end %>
	<nav>
		<ul>
			<% unless @resources.empty? %>
			<% @resources.each do |resource| %>
			<li><%=link_to t('activerecord.models.'+resource.controller.singularize),'/'+resource.controller %></li>
			<% end %>
			<% else %>
			<li><%=t(:no_data) %></li>
			<% end %>
		</ul>
	</nav>
</header>
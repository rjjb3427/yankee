<header>
  <% unless current_page? root_path %>
  <div id="top_menu">
    <ul>
      <% if user_signed_in? %>
      <li><%=link_to(current_user.name,edit_user_registration_path) %>님 환영합니다.</li>
      <li><%= link_to t(:logout),destroy_user_session_path %></li>
      <% else %>
      <li><%= link_to t(:login),new_user_session_path %></li>
      <li><%= link_to t(:sign),new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <nav class="container">
    <h1><%= link_to '주한미군 집에가',root_path %></h1>
    <ul>
      <li><%= link_to reports_path do %>피해 신고<span class="visible-xs glyphicon glyphicon-chevron-right pull-right"></span><% end %></li>
      <li><%= link_to proposes_path do %>철수할 방법 제안<span class="visible-xs glyphicon glyphicon-chevron-right pull-right"></span><% end %></li>
      <li><%= link_to faqs_path do %>주한미군 FAQ<span class="visible-xs glyphicon glyphicon-chevron-right pull-right"></span><% end %></li>
    </ul>
  </nav>
</header>
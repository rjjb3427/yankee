<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="question_show">	
	<div class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @question.title %></h3>
			<p>작성자 :<%= @question.name %>&nbsp;&nbsp;&nbsp; 작성일 : <%= @question.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text"><%= simple_format(@question.question_content.content) %></div>
		</div>
	</div>
	<div id="sl_answer_list_layer">
		<%= render @question_answers %>	
	</div>
	<% if(@question_answers.length>0) %>
	<div class="flickr_pagination"><%= paginate @question_answers %></div>
	<% end %>
	<div id="sl_comment_form_layer">
		<%= render "question_answers/form" %>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_list), questions_path %> 
		<% if @question.user %>
			<% if current_user %>
				<% if @question.user_id==current_user.id %>
					 &nbsp; | &nbsp; <%=link_to '수정', edit_question_path(@question) %> &nbsp; | &nbsp;	
					<%= link_to '삭제', @question, method: :delete, data: { confirm: '정말로 삭제합니까?' } %>
				<% end %>
			<% end %>
		<% else %>
			 &nbsp; | &nbsp; <%=link_to '수정', edit_question_path(@question) %> &nbsp; | &nbsp;
			<% if checkPriv(@question) %>
			<%= link_to '삭제', @question, method: :delete, data: { confirm: '정말로 삭제합니까?' } %>			
			<% else %>
			<%= link_to '삭제', @question, method: :delete %>
			<% end %>			
		<% end %>
	</div>
</section>
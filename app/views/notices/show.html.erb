<% if notice %>
<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
<% end %>
<section id="notice_show">
	<div class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @notice.title %></h3>
			<p>작성자 :<%= @notice.user.name %>&nbsp;&nbsp;&nbsp; 작성일 : <%= @notice.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text"><%= simple_format(@notice.notice_content.content) %></div>
		</div>
	</div>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_list),notices_path %>
		<% if user_signed_in? %>
		<% if current_user.admin? %>
		&nbsp; | &nbsp; <%= link_to '수정', edit_notice_path(@notice) %> &nbsp; | &nbsp; <%= link_to '삭제', @notice, method: :delete, data: { confirm: '정말로 삭제합니까?' } %>
		<% end %>
		<% end %>
	</div>
</section>

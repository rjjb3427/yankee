<section id="report_show">
	<% if notice %>
		<%= render :partial => 'layouts/notice',:locals=>{:notice=>notice} %>
	<% end %>
	<article class="slboard_content">
		<div class="sl_content_header">
			<h3><%= @report.title %></h3>
			<p><%=t(:label_name)%> : <%=@report.user.name %>&nbsp;&nbsp;&nbsp; <%=t(:label_created_at) %> : <%= @report.created_at %></p>
		</div>
		<div class="sl_content_main">
			<div class="sl_content_text"><%=simple_format(@report.report_content.content) %></div>
		</div>
	</article>
	<article>
		
		
	</article>
	<div id="sl_content_bottom_menu">
		<%= link_to t(:link_new), new_report_path %> &nbsp; | &nbsp; 
		<%= link_to t(:link_list),reports_path %> &nbsp; | &nbsp; 
		<%= link_to t(:link_edit), edit_report_path(@report) %>
	</div>
</section>